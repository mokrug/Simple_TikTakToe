<Application x:Class="Simple_TikTakToe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Simple_TikTakToe"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Image Source="Images\O.png"  x:Key="OImage"/>
            <Image Source="Images\X.png"  x:Key="XImage"/>

            <!-- Style der für alle gilt -->
            <Style x:Key="BasicButtonStyle" TargetType="Button">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="Width" Value="100"/>
            </Style>

            <!-- Style der für X gilt -->
            <Style x:Key="XButton" TargetType="Button" BasedOn="{StaticResource BasicButtonStyle}">
                <Setter Property="Content" Value="{StaticResource OImage}"/>
            </Style>

            <!-- Style der für O gilt -->
            <Style x:Key="XButton" TargetType="Button" BasedOn="{StaticResource BasicButtonStyle}">
                <Setter Property="Content" Value="{StaticResource OImage}"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
